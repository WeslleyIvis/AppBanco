// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  username  String?
  password  Int?
  createdAt DateTime @default(now())
}

model Accounts {
  id      Int   @id @default(autoincrement())
  balance Float
}

model Transactions {
  id                Int   @id @default(autoincrement())
  debitedAccountId  Float
  creditedAccountid Float
  value             Float
  createdAt         Float
}
